##############
# Xft settings
##############

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

#################################
# Color settings (Solarized dark)
#################################

*background: #002b36
*foreground: #4f3d28
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

! Black + DarkGrey
*color0:  #F3EAE9
*color8:  #D8B8B3
! DarkRed + Red
*color1:  #c9474a
*color9:  #6e2628
! DarkGreen + Green
*color2:  #839A53
*color10: #6F873E
! DarkYellow + Yellow
*color3:  #D4A520
*color11: #C39104
! DarkBlue + Blue
*color4:  #A6B6CE
*color12: #7B91B3
! DarkMagenta + Magenta
*color5:  #D68482
*color13: #C97270
! DarkCyan + Cyan
*color6:  #89BEB7
*color14: #63A098
! LightGrey + White
*color7:  #ECC3C2
*color15: #F2CC60


################
# URXVT settings
################

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace:            0

# transparency - true or false (default)
#URxvt*transparent: false

# tint with any color; i.e., blue, red, tomato4, olivedrab2, etc.
#   some nice listings are at:
#     http://www.nisrv.com/drupal/?q=node/11
#     http://www.htmlgoodies.com/tutorials/colors/article.php/3478921
#URxvt*tintColor: S_base03

# shading - 0 to 99 darkens, 101 to 200 lightens.
#   Don't use with tintColor; just use a darker or lighter color instead.
URxvt*shading: 10

URxvt*saveLines: 12000

URxvt*background: #4f3d28
URxvt*foreground: #ffe3c2

# Monaco Linux font
URxvt*font: xft:Roboto Mono:pixelsize=12
URxvt*boldFont: xft:Roboto Mono:bold:pixelsize=12
URxvt*letterSpace: 0

# scrollbar - true (default) or false
URxvt*scrollBar: false

# scrollbar position - left=false (default) or right=true
URxvt*scrollBar_right: false

# scrollbar style - rxvt (default), plain, next, or xterm
URxvt*scrollstyle: plainqqq
